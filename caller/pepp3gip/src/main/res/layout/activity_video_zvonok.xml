<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinderCall"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/KnopkaKrasnaya"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trubka_zelenaya"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/KnopkaZelenaya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/KnopkaKrasnaya"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trubka_kransnaya"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/KnopkaKrasnaya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/KnopkaZelenaya"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>